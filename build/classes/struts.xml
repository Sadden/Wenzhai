<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
<constant name="struts.serve.static.browserCache" value="false" />
    <!-- 当struts的配置文件修改后,系统是否自动重新加载该文件,默认值为false(生产环境下使用),开发阶段最好打开 -->
    <constant name="struts.configuration.xml.reload" value="true" />
    <!-- 开发模式下使用,这样可以打印出更详细的错误信息 -->
    <constant name="struts.devMode" value="true" />
    <!-- 默认的视图主题 -->
    <constant name="struts.ui.theme" value="simple" />
    <!--<constant name="struts.objectFactory" value="spring" />-->
    <!--解决乱码    -->
    <constant name="struts.i18n.encoding" value="UTF-8" />
    <!-- 指定允许上传的文件最大字节数。默认值是2097152(2M) -->
    <constant name="struts.multipart.maxSize" value="10701096"/>
    <!-- 设置上传文件的临时文件夹,默认使用javax.servlet.context.tempdir -->
    <constant name="struts.multipart.saveDir " value="d:/tmp" />
<package name = "default" namespace="/" extends= "struts-default">
<action name = "helloworld" class = "sadden.wenzhai.action.Helloword">
 <result>/login.jsp</result>
</action>

<action name = "LoginAction"  class = "sadden.wenzhai.action.LoginAction">
 <result name = "admin">/admin_index.jsp</result>
<result name = "IDErro">/IDErro.jsp </result>
</action>
<action name = "SearchAction"  class = "sadden.wenzhai.action.SearchAction">
 <result name = "NoTag">/IDErro.jsp</result>
<result name = "Result">/admin_result.jsp</result>
</action>

<action name = "SearchAction"  class = "sadden.wenzhai.action.SearchAction">
 <result name = "NoTag">/IDErro.jsp</result>
<result name = "Result">/admin_result.jsp</result>
</action>
<action name = "ToAddAction"   method= "ToAdd" class = "sadden.wenzhai.action.AddAction">
 <result name = "ToAdd">/AddNew.jsp</result>
</action>
<action name = "AddAction"   method= "AddPic" class = "sadden.wenzhai.action.AddAction">
 <result name = "AddSuccess">/AddSuccess.jsp</result>
</action>
<action name = "Upload_test"   method= "Upload_test" class = "sadden.wenzhai.action.UploadAction">
 <result name = "OK">/AddSuccess.jsp</result>
</action>

</package>

</struts>